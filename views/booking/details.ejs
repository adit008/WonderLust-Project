<% layout("/layouts/boilerplate") %>

<body>
    <div class="container my-5">
        <h1 class="text-center">Booking Details</h1>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Property Name</th>
                    <th>User ID</th>
                    <th>Check-In Date</th>
                    <th>Check-Out Date</th>
                    <th>Total Amount</th>
                    <th>Payment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (bookings && bookings.length > 0) { %>
                    <% bookings.forEach((booking, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= booking.hotelName %></td>
                            <td><%= booking.userId %></td>
                            <td><%= booking.startDate.toLocaleDateString() %></td>
                            <td><%= booking.endDate.toLocaleDateString() %></td>
                            <td>$<%= booking.totalAmount.toFixed(2) %></td>
                            <td><%= booking.paymentStatus %></td>
                            <td>
                                <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="8" class="text-center">No bookings available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
