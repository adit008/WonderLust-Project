<% layout("/layouts/boilerplate") %>
  <style>
    .contact-container {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: space-evenly;
    }

    .contact-left {
      display: flex;
      flex-direction: column;
      align-items: start;
      gap: 20px;
    }

    .contact-left-title h1 {
      font-weight: 600;
      font-size: 40px;
      margin-bottom: 5px;
    }

    .contact-left-title hr {
      border: none;
      background-color: black;
      width: 120px;
      height: 5px;
      border: 10px;
      margin-bottom: 20px;
    }

    .contact-inputs {
      width: 400px;
      height: 50px;
      border: none;
      outline: none;
      padding-left: 25px;
      font-weight: 500;
      color: #666;
      border-radius: 50px;
      margin-right: -25px;
    }

    .contact-inputs:focus {
      border: 2px solid #ff994f;
    }

    .form-group {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
      margin-top: 15px;
    }

    .form-group label {
      font-weight: 500;
      width: 150px;
      margin-right: -50px;
    }

    .form-group input,
    .form-group textarea {
      width: 300px;
    }

    .contact-left button {
      margin-top: 10px;
      display: flex;
      align-items: center;
      padding: 15px 30px;
      font-size: 16px;
      color: #fff;
      gap: 10px;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      background: linear-gradient(270deg, #ff994f, #fa6d86);
    }

    .form-info {
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;
      width: 500px;
      height: 400px;
      border-radius: 15px;
      box-shadow: -15px -15px 15px rgba(255, 255, 255, 0.2),
        15px 15px 15px rgba(0, 0, 0, 0.1),
        inset -5px -5px 5px rgba(255, 255, 255, 0.2),
        inset 5px 5px 5px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 768px) {
      .form-container {
        padding: 10px;
        width: 100%;
      }

      .form-group {
        display: block;
        width: 100%;
        margin-bottom: 10px;
      }

      .form-group input,
      .form-group textarea {
        width: 100%;
      }
    }
  </style>

  <body>
    <div class="contact-container">
      <form action="https://api.web3forms.com/submit" method="POST" class="contact-left">
        <div class="contact-left-title">
          <h1>Compliant Box</h1>
          <hr>
        </div>
        <div class="form-info">
          <input type="hidden" name="access_key" value="59c626bf-88f0-4972-9ba9-c6ef3954bf35">
          <div class="form-group">
            <label for="name">Name :</label>
            <input type="text" id="name" name="name" placeholder="Your Name" class="contact-inputs" required>
          </div>
          <div class="form-group">
            <label for="email">Email ID :</label>
            <input type="email" id="email" name="email" placeholder="Your Email" class="contact-inputs" required>
          </div>
          <div class="form-group">
            <textarea name="message" wrap="hard" rows="5" cols="30" placeholder="Write your Complaint here ..."
              required></textarea>
          </div>
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>
  </body>