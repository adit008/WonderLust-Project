<% layout("/layouts/boilerplate") %>
<style>
  .card-body {
    display: flex;
  }
  .rating-container {
    width: 400px;
    height: 200px;
    text-align: end;
  }
  .amenities {
    width: 50%;
    position: relative;
    left: 25%;
    margin-top: 5px  ;
  }
  .fact {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  .fact .fac-line {
    margin-bottom: -10px;
  }
  .bt {
    position: relative;
    left: 283px;
    top: 8px;
  }
  .book {
    position: relative;
    left: -425px;
    z-index: 10;
}
.amenities{
  position: relative;
  top: 0px;
}

  @media (min-width: 200px) and (max-width: 768px) {
    * {
      margin: 0;
      padding: 0;
    }
    body{
        width: calc(100% - 0px);
    }
    .m {
      margin-right: 4rem;
    }
  }
  .map {
    margin: 20px auto;
    text-align: center;
  }
  .map h4 {
    margin-bottom: 10px;
  }
  .map iframe {
    border: 2px solid #007bff; 
    border-radius: 10px; 
    width: 100%; 
    height: 400px;
    max-width: 800px;
  }
</style>

<br>
<div class="m">
  <div class="row">
    <div class="col-8 offset-3 show-card">
      <h1>
        <%= listing.title %>
      </h1><br>
    </div>
    <div class="card col-6 offset-3 listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_img">
      <div class="card-body">
        <div class="card-detials">
          <p class="card-text">
            <br>
            <i><b>
                <%= listing.owner.username %>
              </b></i><br>
            <p>
              <%= listing.description %>
            </p>
            <p>&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
            <p>
              <%= listing.location %>
            </p>
            <p>
              <%= listing.country %>
            </p>
            </p>
          </div>
          <div class="mt-2 rating-container p-2"><h4><span class="rating"><%= listing.rating %> <i class="ri-star-fill"></i></span></h4></div> 
        </div>
      </div><br>
      <% if(currUser){ %>
        <div class="container py-4 book">
          <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
          <form action="/booking" method="POST" class="p-4 bg-light shadow rounded bookform">
            <input type="hidden" name="hotelId" value="<%= listing._id %>">
            
            <h3 class="mb-4 text-center">Book Your Stay</h3>
            
            <div class="mb-3">
              <label for="startDate" class="form-label">Start Date</label>
              <input type="date" id="startDate" name="startDate" class="form-control" required>
            </div>
            
            <div class="mb-3">
              <label for="endDate" class="form-label">End Date</label>
              <input type="date" id="endDate" name="endDate" class="form-control" required>
            </div>
            
            <div class="mb-3">
              <label for="guestCount" class="form-label">Guests</label>
              <input type="number" id="guestCount" name="guestCount" class="form-control" min="1" value="1" required>
            </div>
            
            <button type="submit" class="btn btn-primary w-100">Book Now</button>
          </form>
          <br>
        </div>
      <% } %>
      <div class="amenities mt-3">
        <h3>Amenities</h3>
        <div class="row">
          <div class="col-md-6">
            <div class="fact d-flex align-items-center mb-3">
              <div class="me-2">
                <i class="ri-wifi-line" style="font-size: 32px;"></i>
              </div>
              <div>
                <p>Free Wifi</p>
              </div>
            </div>
            <div class="fact d-flex align-items-center mb-3">
              <div class="me-2">
                <i class="ri-tv-2-fill" style="font-size: 32px;"></i>
              </div>
              <div>
                <p>TV</p>
              </div>
            </div>
            <div class="fact d-flex align-items-center mb-3">
              <div class="me-2">
                <img src="https://www.svgrepo.com/show/30325/air-conditioner.svg" alt="AC" width="40" height="40">
              </div>
              <div>
                <p>AC</p>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="fact d-flex align-items-center mb-3">
              <div class="me-2">
                <img src="https://www.svgrepo.com/show/210456/radio-antenna-satellite-dish.svg" alt="DTH" width="40" height="40">
              </div>
              <div>
                <p>DTH</p>
              </div>
            </div>
            <div class="fact d-flex align-items-center mb-3">
              <div class="me-2">
                <img src="https://cdn.iconscout.com/icon/premium/png-512-thumb/geyser-1437172-1212991.png?f=webp&w=512" alt="Geyser" width="40" height="40">
              </div>
              <div>
                <p>Geyser</p>
              </div>
            </div>
            <div class="fact d-flex align-items-center mb-3">
              <div class="me-2">
                <img src="https://cdn-icons-png.flaticon.com/512/5102/5102796.png" alt="Power Backup" width="40" height="40">
              </div>
              <div>
                <p>Power backup</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
        <div class="btn">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 edit-btn">Edit</a>

          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-3">Delete</button>
          </form>
        </div>
        
      <% } %>

      <div class="map">
        <hr>
        <h4>Map</h4>
        <p><%- listing.iframe %></p>
      </div>


      <br><br>
      <% if(currUser){ %>
        <div class="col-8 offset-3">
          <h4>Leave A Review</h4>
          <hr>
          <form action="/listings/<%= listing._id %>/reviews" method="POST">
            <div class="star">
              <label for="rating" class="form-lable">Rating</label>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div><br>
            <div>
              <label for="comment" class="form-lable">Comment</label>
              <textarea name="review[comment]" id="comment" cols="10" rows="5" class="form-control" required></textarea>
            </div>
            <br>
            <button class="btn btn-outline-dark">Submit</button>
            <br>
          </form>
        </div>
      <% } %>
      <hr>

      <div class="row rev">
        <p><b>All Reviews</b></p>
        <% for(reviews of listing.review){ %>
          <div class="card col-5 ms-3 mb-3">
            <div>
              <h5 class="card-title">@<%= reviews.author.username %></h5>
              <p class="starability-result card-text" data-rating=<%=reviews.rating%>></p>
              <p class="card-text"><%= reviews.comment %></p>
            </div>
            <form action="/listings/<%= listing._id %>/reviews/<%= reviews._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
            <br>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
