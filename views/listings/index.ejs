<% layout("/layouts/boilerplate") %>
  <br>
  <style>
    
    .heading h1 {
      text-align: center;
      color: #fe424d;
      font-style: oblique;
    }

    .poster {
      display: flex;
      flex-wrap: nowrap;
      flex-direction: row;
      justify-content: center;
      gap: 3rem;
      padding: 2rem 4rem 1rem 1rem;
    }

    .poster p {
      text-align: center;
    }

    .p1 h4 {
      position: relative;
      left: 3.75rem;
    }

    .filter p {
      font-size: 0.8rem;
      font-weight: 600;
    }

    .filter a {
      text-decoration: none;
      color: inherit;
      display: block;
      text-align: center;
    }


    .btn button {
      background-color: #fe424d;
      color: #fff;
      border: none;
      border-radius: 25px;
      justify-content: end;
    }

    .btn button:hover {
      background-color: #fe424d;
      color: #fff;
      border-radius: 25px;
    }

    .btn i {
      margin-right: 0.5rem;
      margin-top: 0.30rem;
    }

    #filters {
      gap: 4rem;
      display: flex;
      flex-wrap: wrap;
    }

    .filter {
      text-align: center;
    }

    .filter p {
      font-size: 0.8rem;
      font-weight: 600;
    }

    .mfilter {
      display: none;
    }
    .sp{
      position: relative;
      right: 30px;
    }
    .ra{
      position: relative;
      left: 34px;
    }

    @media (max-width: 768px) {
      #filters {
        display: flex;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: center;
        overflow-x: auto;
        padding: 0;
        margin: 0;
        width: 381px;
        max-width: 100vw;
        gap: 1.5rem;
      }

      .btn button {
        display: none;
      }

      .mfilter {
        display: flex !important;
        margin-bottom: 1rem;
      }
      .sbtn{
        width: 3rem;
        margin-top: -2rem;
        margin-left: 0.5rem;
      }
      .container{
        width: 15rem;
        margin-left: 1rem;
      }
      .listing-container {
        display: flex;
        flex-direction: column;
        padding: 10px;
    }

    .listing-item {
        width: 100%; 
        margin-bottom: 15px;
    }
    }
  </style>
  <div id="filters">
    <div class="filter">
      <a href="/trending">
        <div>
          <i class="fa-solid fa-fire"></i>
        </div>
        <p>Trending</p>
      </a>
    </div>
    <div class="filter">
      <a href="/rooms">
        <div>
          <i class="fa-solid fa-bed"></i>
        </div>
        <p>Rooms</p>
      </a>
    </div>
    <div class="filter">
      <a href="/iconic-city">
        <div>
          <i class="fa-solid fa-city"></i>
        </div>
        <p>Iconic City</p>
      </a>
    </div>
    <div class="filter">
      <a href="/mountains">
        <div>
          <i class="fa-solid fa-mountain"></i>
        </div>
        <p>Mountains</p>
      </a>
    </div>
    <div class="filter">
      <a href="/castles">
        <div>
          <i class="fa-brands fa-fort-awesome"></i>
        </div>
        <p>Castles</p>
      </a>
    </div>
    <div class="filter">
      <a href="/amazing-pool">
        <div>
          <i class="fa-solid fa-person-swimming"></i>
        </div>
        <p>Amazing Pool</p>
      </a>
    </div>
    <div class="filter">
      <a href="/camping">
        <div>
          <i class="fa-solid fa-campground"></i>
        </div>
        <p>Camping</p>
      </a>
    </div>
    <div class="filter">
      <a href="/farms">
        <div>
          <i class="fa-solid fa-tractor"></i>
        </div>
        <p>Farms</p>
      </a>
    </div>


    <div class="filter">
      <div class="btn">
        <div class="dropdown">
          <form action="/listings/filter" method="POST">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              Filter
            </button>
            <ul class="dropdown-menu">
              <li> &nbsp; <input type="radio" id="Italy" value="1" name="country"><label for="Italy">&nbsp; Low to High
                  price</label><a class="dropdown-item" href="/listings/filter/"></a></li>
              <li> &nbsp; <input type="radio" id="Italy" value="0" name="country"><label for="United States">&nbsp; High
                  to Low Price</label><a class="dropdown-item" href="/listings/filter/"></a></li>
              &nbsp; <button type="submit">Search</button>
            </ul>
          </form>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="mfilter">
    <div class="mbtn">
      <div class="dropdown">
        <form action="/listings/filter" method="POST">
          <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">
            Filter
          </button>
          <ul class="dropdown-menu">
            <li> &nbsp; <input type="radio" id="Italy" value="1" name="country"><label for="Italy">&nbsp; Low to High
                price</label><a class="dropdown-item" href="/listings/filter/"></a></li>
            <li> &nbsp; <input type="radio" id="Italy" value="0" name="country"><label for="United States">&nbsp; High
                to Low Price</label><a class="dropdown-item" href="/listings/filter/"></a></li>
            &nbsp; <button class="btn btn-danger sbtn" type="submit">Search</button>
          </ul>
        </form>
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body d-flex flex-row mb-3 justify-content-between sp">
            <p class="card-text">
              <div class="p-3"><b>
                <%= listing.title %>
              </b><br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> /night</div>
              <div>
                <div class="mt-3 rating-container ra">
                  <p><span class="rating"><%= listing.rating %> <i class="ri-star-fill"></i></span></p>
                </div> 
              </div>
            </p>
          </div>
        </div>
      </a>
      <% } %>

  </div>
  <br><br>